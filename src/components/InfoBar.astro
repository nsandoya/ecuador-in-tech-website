---
import type { Event } from '../interfaces/events'
import LinkTo from './ui/LinkTo.astro'


const {place, date} = Astro.props as Event
---
<div class="flex flex-col w-fit bg-slate-200 rounded-xl px-10 py-3 text-left">
    <div class="flex flex-row items-center">
        <svg
            class="w-4 h-4"
            fill="none"
            stroke="currentColor"
            viewBox="0 0 24 24"
            >
            <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"
            />
        </svg>
        <span class="font-semibold text-slate-500 ml-2">
            {date}
        </span>
    </div>
    <div class="flex flex-row items-center">
        <svg
        class="w-4 h-4"
        fill="none"
        stroke="currentColor"
        viewBox="0 0 24 24"
        >
        <path
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"
        />
        <path
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"
        />
        </svg>
        <span class="font-semibold text-slate-500 ml-2">
            {place}
        </span>
    </div>
    <!-- {info.map((textLine) => (
    ))} -->
</div>